<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.PermanentAddress"
    android:id="@+id/permanentAddress">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Village"
        android:id="@+id/textView15"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />
       " />

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/permanentDistrict"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cell"
        android:id="@+id/textView16"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="30dp" />

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/permanentCell"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/permanentDistrict"
        android:layout_alignStart="@+id/permanentDistrict" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sector"
        android:id="@+id/textView17"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView18"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15"
        android:layout_marginTop="30dp" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/permanentSector"
        android:inputType="text"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignLeft="@+id/permanentCell"
        android:layout_alignStart="@+id/permanentCell"
        android:layout_alignRight="@+id/permanentDistrict"
        android:layout_alignEnd="@+id/permanentDistrict" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="District"
        android:id="@+id/textView18"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/permanentDistrict"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/permanenVillage"
        android:layout_below="@+id/permanentCell"
        android:layout_alignLeft="@+id/permanentCell"
        android:layout_alignStart="@+id/permanentCell"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button3"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
