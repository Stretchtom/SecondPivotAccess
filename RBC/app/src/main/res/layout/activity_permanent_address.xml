<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.PermanentAddress">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="District"
        android:id="@+id/textView15"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/sector"
        android:layout_marginTop="20dp" />
       " />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/village"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sector"
        android:id="@+id/textView16"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/sector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sector"
        android:layout_below="@+id/cell"
        android:layout_alignLeft="@+id/cell"
        android:layout_alignStart="@+id/cell"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cell"
        android:id="@+id/textView17"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/village"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cell"
        android:inputType="text"
        android:layout_below="@+id/village"
        android:layout_alignRight="@+id/village"
        android:layout_alignEnd="@+id/village"
        android:layout_alignLeft="@+id/village"
        android:layout_alignStart="@+id/village"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Village"
        android:id="@+id/textView18"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/district"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignLeft="@+id/sector"
        android:layout_alignStart="@+id/sector"
        android:layout_alignRight="@+id/sector"
        android:layout_alignEnd="@+id/sector" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button3"
        android:layout_below="@+id/district"
        android:layout_alignRight="@+id/district"
        android:layout_alignEnd="@+id/district"
        android:layout_marginTop="57dp" />


</RelativeLayout>
