<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.CaseFollowUp6">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PCR"
        android:id="@+id/textView71"
        android:layout_below="@+id/textView70"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Blood spot for PCR analysis performed"
        android:id="@+id/textView72"
        android:layout_below="@+id/textView71"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:textSize="30dp" />
    <RadioGroup
        android:id="@+id/radiosbloodSpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView72"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">



    <RadioButton
        android:id="@+id/radiosbloodspot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:checked="true"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView72"
        android:layout_toLeftOf="@+id/radiosbloodspot2"
        android:layout_toStartOf="@+id/radiosbloodspot2" />

    <RadioButton
        android:id="@+id/radiosbloodspot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:checked="false"
        android:layout_alignTop="@+id/textView72"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff000000"
        android:textSize="30dp" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date sent to Lab"
        android:id="@+id/textView64"
        android:layout_below="@+id/textView72"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText55"
        android:layout_alignTop="@+id/textView64"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Treatment applied/information"
        android:id="@+id/textView65"
        android:layout_below="@+id/editText55"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Treatment given:"
        android:id="@+id/textView74"
        android:layout_below="@+id/textView65"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner9"
        android:layout_alignTop="@+id/textView74"
        android:layout_alignLeft="@+id/editText55"
        android:layout_alignStart="@+id/editText55"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="70dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Completed treatment dose"
        android:id="@+id/textView75"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/textView74"
        android:layout_toLeftOf="@+id/radiostreatmentDose"
        android:layout_toStartOf="@+id/radiostreatmentDose"
        android:layout_marginTop="10dp" />
    <RadioGroup
        android:id="@+id/radiostreatmentDose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignRight="@+id/spinner9"
        android:layout_alignEnd="@+id/spinner9"
        android:layout_alignTop="@+id/textView75"
        android:layout_marginLeft="20dp">


        <RadioButton
        android:id="@+id/radiostreatmentdose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:layout_below="@+id/textView74"
        android:layout_toRightOf="@+id/radiostreatmentdose1"
        android:checked="false"
       android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_marginBottom="30dp" />

        <RadioButton
            android:id="@+id/radiostreatmentdose1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:checked="true"
            android:textColor="#ff000000"
            android:textSize="30dp"
            android:layout_alignTop="@+id/radiostreatmentdose2"
            android:layout_toLeftOf="@+id/button12"
            android:layout_toStartOf="@+id/button12" />
    </RadioGroup>

    <EditText
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText56"
        android:hint="Notes"
        android:textSize="25dp"
        android:layout_below="@+id/textView75"
        android:layout_alignRight="@+id/button12"
        android:layout_alignEnd="@+id/button12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button12"
        android:textColor="#ff000000"
        android:layout_below="@+id/editText56"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
