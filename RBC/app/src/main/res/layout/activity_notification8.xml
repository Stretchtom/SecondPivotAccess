<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.NotificationForm8"
    android:id="@+id/notification8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action Taken"
        android:id="@+id/textView46"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/completedby"
        android:hint="Completed by"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dateofcompletion"
        android:layout_alignEnd="@+id/dateofcompletion"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/verifiedDesignation"
        android:hint="Verified Designation"
        android:textSize="30dp"
        android:layout_below="@+id/dateofcompletion"
        android:layout_alignRight="@+id/completedDesignation"
        android:layout_alignEnd="@+id/completedDesignation"
        android:inputType="text"
        android:layout_toRightOf="@+id/dateofcompletion"
        android:layout_toEndOf="@+id/dateofcompletion" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/dateofcompletion"
        android:hint="Date of completion"
        android:textSize="30dp"
        android:inputType="date"
        android:layout_below="@+id/completedby"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/verifiedDate"
        android:hint="Verified Date"
        android:textSize="30dp"
        android:inputType="text"
        android:layout_above="@+id/submit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/completedDesignation"
        android:textSize="29dp"
        android:hint="Designation"
        android:layout_alignTop="@+id/completedby"

        android:layout_toRightOf="@+id/completedby"
        android:layout_toEndOf="@+id/completedby"
        android:inputType="text" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/submit"
        android:textSize="20dp"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/verifiedDesignation"
        android:layout_toRightOf="@+id/textView46"
        android:layout_toEndOf="@+id/textView46" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Infection Location"
        android:id="@+id/textView12"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/textView46"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioActionTaken"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textView46"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radioCaseInvest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CaseInvestigation"
            android:checked="true"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioContactScreen"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:text="ContactScreening"
            android:checked="false"
            android:textSize="25dp" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="New Text"
        android:id="@+id/latitude"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/completedDesignation"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:textColor="#ff000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="New Text"
        android:id="@+id/longtitude"
        android:layout_above="@+id/completedDesignation"
        android:layout_toRightOf="@+id/completedby"
        android:layout_below="@+id/textView12"
        android:layout_alignRight="@+id/completedDesignation"
        android:layout_alignEnd="@+id/completedDesignation"
        android:textSize="30dp"
        android:textColor="#ff000000" />

</RelativeLayout>
