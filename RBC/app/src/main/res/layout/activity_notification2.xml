<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.NotificationForm2"
    android:weightSum="1"
    android:id="@+id/notification2"
    android:orientation="horizontal">


    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/DOB"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/radioPregnant"
        android:layout_toStartOf="@+id/radioPregnant"
        android:hint="DOB"
        android:textSize="25dp" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumber"
        android:inputType="number"
        android:hint="Phone Number"
        android:textSize="25dp"
        android:layout_below="@+id/DOB"
        android:layout_alignRight="@+id/residentialDistrict"
        android:layout_alignEnd="@+id/residentialDistrict"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15" />

    <RadioGroup
        android:id="@+id/radioPregnant"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView14"
        android:layout_toRightOf="@+id/textView19"
        android:layout_toEndOf="@+id/textView19">

        <RadioButton
            android:id="@+id/radiopregYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:checked="true"
            android:textSize="30dp"
            android:layout_below="@+id/textView20"
            android:layout_toRightOf="@+id/textView17"
            android:layout_toEndOf="@+id/textView17" />

        <RadioButton
            android:id="@+id/radiopregNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:checked="false"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/radioAddress"
            android:layout_alignRight="@+id/radiopregYes"
            android:layout_alignEnd="@+id/radiopregYes" />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregnant"
        android:id="@+id/textView14"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/phoneNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residential District"
        android:id="@+id/textView15"
        android:textSize="30dp"
        android:textColor="#ff000000"

        android:layout_below="@+id/textView14"
        android:layout_toLeftOf="@+id/residentialDistrict"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/residentialDistrict"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sector"
        android:id="@+id/textView16"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/residentialDistrict"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sektor"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15"
        android:layout_toRightOf="@+id/textView14"
        android:layout_toEndOf="@+id/textView14"
        android:layout_below="@+id/residentialDistrict"
        android:spinnerMode="dialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cell"
        android:id="@+id/textView17"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignStart="@+id/residentialDistrict" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/cell"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:layout_alignBottom="@+id/textView16"
        android:layout_below="@+id/residentialDistrict"
        android:spinnerMode="dialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Village"
        android:id="@+id/textView18"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/village"
        android:layout_alignTop="@+id/textView18"
        android:layout_toRightOf="@+id/sektor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Household Head "
        android:id="@+id/textView19"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/householdName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/householdName"
        android:layout_below="@+id/village"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/village"
        android:layout_alignStart="@+id/village" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is physical address different?"
        android:id="@+id/textView20"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/householdName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/textView17"
        android:layout_toStartOf="@+id/textView17" />

    <RadioGroup
        android:id="@+id/radioAddress"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView20"
        android:layout_alignRight="@+id/householdName"
        android:layout_alignEnd="@+id/householdName">



    <RadioButton
        android:id="@+id/radioYesAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:checked="true"
        android:textSize="30dp"
         />

    <RadioButton
        android:id="@+id/radioNoAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:checked="false"
        android:textSize="30dp"
        />
    </RadioGroup>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next2"
        android:layout_below="@+id/textView20"
        android:layout_alignRight="@+id/householdName"
        android:layout_alignEnd="@+id/householdName" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:inputType="number"
        android:hint="Age"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/phoneNumber"
        android:layout_alignEnd="@+id/phoneNumber"
        android:layout_alignLeft="@+id/phoneNumber"
        android:layout_alignStart="@+id/phoneNumber" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/nationality"
        android:hint="Nationality"
        android:textSize="25dp"
        android:inputType="date|text"
        android:layout_below="@+id/DOB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/radioPregnant"
        android:layout_toStartOf="@+id/radioPregnant" />


</RelativeLayout>
