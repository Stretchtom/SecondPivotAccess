<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.NotificationForm4"
    android:id="@+id/notifcation4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where pateint slept before illness?"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 -7 days"
        android:id="@+id/textView28"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8-14 days"
        android:id="@+id/textView29"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/textView28"
        android:layout_alignRight="@+id/textView27"
        android:layout_alignEnd="@+id/textView27" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/zeroToseven"
        android:layout_alignTop="@+id/textView28"
        android:layout_toRightOf="@+id/textView30"
        android:layout_toEndOf="@+id/textView30" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/eightTofourteen"
        android:layout_alignTop="@+id/textView29"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 - 21 days"
        android:id="@+id/textView30"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/zeroToseven"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView32"
        android:layout_alignEnd="@+id/textView32" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21- 42 days"
        android:id="@+id/textView31"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/eightTofourteen"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_alignRight="@+id/textView29"
        android:layout_alignEnd="@+id/textView29" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/fifteentwentyone"
        android:layout_below="@+id/zeroToseven"
        android:layout_toRightOf="@+id/textView30"
        android:layout_alignRight="@+id/zeroToseven"
        android:layout_alignEnd="@+id/zeroToseven" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/twentyonefortytwo"
        android:layout_below="@+id/eightTofourteen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView27"
        android:layout_toRightOf="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42 - above"
        android:id="@+id/textView32"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/fortytwoabove"
        android:layout_marginTop="10dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/fortytwoabove"
        android:layout_below="@+id/textView31"
        android:layout_toLeftOf="@+id/textView31"
        android:layout_toStartOf="@+id/textView31" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has patient travelled in Rwanda within the last 14 days?"
        android:id="@+id/textView33"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/fortytwoabove"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/fifteentwentyone"
        android:layout_alignEnd="@+id/fifteentwentyone" />

    <RadioGroup
        android:id="@+id/radioIntravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView33"
        android:layout_toEndOf="@+id/textView33"
        android:layout_toRightOf="@+id/textView33">



    <RadioButton
        android:id="@+id/radioYestravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:checked="true"
        android:textSize="30dp"
        />

    <RadioButton
        android:id="@+id/radioNotravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:checked="false"
        android:textSize="30dp"
      />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If yes, return Date of travel"
        android:id="@+id/textView34"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/returnInDate"
        android:layout_alignBottom="@+id/textView34"
        android:layout_toRightOf="@+id/textView31"
        android:layout_toEndOf="@+id/textView31" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next4"
        android:layout_below="@+id/returnInDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
