<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.NotificationForm7"
    android:id="@+id/notification7">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bsexamfacility"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="BS examining facility"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bsexamoffcier"
        android:hint="Examing officer"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PCR"
        android:id="@+id/textView43"
        android:layout_below="@+id/bsexamfacility"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/pcrdate"
        android:hint="Date Collected"
        android:textSize="30dp"
        android:layout_below="@+id/bsexamoffcier"
        android:layout_alignLeft="@+id/bsexamoffcier"
        android:layout_alignStart="@+id/bsexamoffcier" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specimen Collected"
        android:id="@+id/textView44"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/pcrdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioPCRcollected"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView44"
        android:layout_alignLeft="@+id/pcrdate"
        android:layout_alignStart="@+id/pcrdate">



    <RadioButton
        android:id="@+id/radioYespcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:checked="true"
        android:textSize="30dp"
         />
    " />


    <RadioButton
        android:id="@+id/radioNopcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:checked="false"
        android:textSize="30dp"
        />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dbscard"
        android:hint="DBS Card"
        android:textSize="30dp"

        android:inputType="number"
        android:layout_below="@+id/textView44"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText10"
        android:hint="Date DBS sample sent to NHL"
        android:textSize="30dp"
        android:layout_below="@+id/dbscard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/next7"
        android:layout_toStartOf="@+id/next7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Malaria Species (check all that apply)"
        android:id="@+id/textView45"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/editText10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next7"
        android:layout_below="@+id/checkBox4"
        android:layout_toRightOf="@+id/textView45"
        android:layout_toEndOf="@+id/textView45" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Vivax"
        android:id="@+id/checkBox"
        android:checked="false"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/textView45"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Falciparum"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/textView45"
        android:layout_alignRight="@+id/textView45"
        android:layout_alignEnd="@+id/textView45"
        android:layout_alignBottom="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Malarie"
        android:id="@+id/checkBox3"
        android:checked="false"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_above="@+id/next7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Not Determined"
        android:id="@+id/checkBox4"
        android:checked="false"
        android:textColor="#ff000000"
        android:textSize="30dp"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

</RelativeLayout>
