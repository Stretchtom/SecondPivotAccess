<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tmutabazi.rbc.UI.NotificationForm5"
    android:id="@+id/notifaction5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has patient travelled out of Rwanda within the last 14 days?"
        android:id="@+id/textView33"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_below="@+id/fortytwoabove"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/radionextravel"
        android:layout_toLeftOf="@+id/radionextravel" />

    <RadioGroup
        android:id="@+id/radiotravel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView33"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">



    <RadioButton
        android:id="@+id/radioYestravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:checked="true"
        android:textSize="30dp"
        />


    <RadioButton
        android:id="@+id/radioNoouttravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:checked="false"
        android:textSize="30dp"
         />
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If yes, where"
        android:id="@+id/textView35"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/districtOut"
        android:layout_alignBottom="@+id/textView35"
        android:layout_centerHorizontal="true"
        android:hint="District"
        android:textSize="30dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/countryOut"
        android:layout_alignBottom="@+id/textView35"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Country"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateofreturn"
        android:hint="Return date of travel"
        android:textSize="30dp"
        android:layout_below="@+id/textView35"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/preventmeasures"
        android:hint="Preventable measures taken"
        android:textSize="30dp"

        android:inputType="text"
        android:layout_below="@+id/dateofreturn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/countryOut"
        android:layout_toStartOf="@+id/countryOut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is the patient going to travel in the next 42 days"
        android:id="@+id/textView36"
        android:textSize="30dp"
        android:textColor="#ff000000"

        android:layout_below="@+id/preventmeasures"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/dateofreturn"
        android:layout_alignEnd="@+id/dateofreturn" />

    <RadioGroup
        android:id="@+id/radionextravel"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_above="@+id/surnameOfPatient"
        android:layout_toRightOf="@+id/dateofreturn"
        android:layout_toEndOf="@+id/dateofreturn">



    <RadioButton
        android:id="@+id/radioYesnextravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:checked="true"
        android:textSize="30dp"
         />


    <RadioButton
        android:id="@+id/radioNonexttravel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:checked="false"
        android:textSize="30dp"
         />
    </RadioGroup>
    <EditText
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/surnameOfPatient"
        android:hint="If yes, name places"
        android:textSize="30dp"
        android:layout_below="@+id/textView36"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/next5"
        android:layout_below="@+id/surnameOfPatient"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
